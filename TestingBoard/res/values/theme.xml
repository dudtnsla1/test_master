<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
		<item name="actionBarStyle">@style/MyActionBar</item>
		<item name="android:windowBackground">@color/switch_thumb_normal_material_light</item>
		<item name="android:colorBackground">@color/switch_thumb_normal_material_light</item>
	</style>

	<!-- ActionBar styles -->
	<style name="MyActionBar" parent="@style/Base.Widget.AppCompat.ActionBar.Solid">
		<item name="background">@color/main_home_emerald_alpha_b</item>
		<item name="titleTextStyle">@style/MyTitleTextStyle</item>
	</style>

	<style name="MyTitleTextStyle"
		parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/white</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>