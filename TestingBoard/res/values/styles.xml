<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
    </style>

    <style name="setting_sub">
        <item name="android:gravity">start|center</item>
    </style>

    <style name="setting_paragraph_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1565C0</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="setting_sub1" parent="@style/setting_sub">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="setting_sub2">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">#000</item>
        <item name="android:listPreferredItemHeight">10dp</item>
    </style>

    <style name="defaultLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>